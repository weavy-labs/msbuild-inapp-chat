@model ErrorModel
<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Error</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="~/css/styles.css" rel="stylesheet" asp-append-version="true">  
</head>
<body class="h-100 d-flex py-4">
  <main role="main" class="mx-auto w-100 p-3" style="max-width:680px">
    <div class="container">
      <h1 class="h1 fw-normal text-danger">Aww, snap!</h1>
      <h2 class="h3 fw-normal text-danger">An error occurred while processing your request :(</h2>
      @if (Model?.ShowRequestId ?? false) {
        <p><code>@Model?.RequestId</code></p>
      }
    </div>
  </main>
</body>
</html>


