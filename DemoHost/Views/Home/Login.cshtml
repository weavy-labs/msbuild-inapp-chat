@model LoginModel
<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="~/css/styles.css" rel="stylesheet" asp-append-version="true">  
</head>
<body class="d-flex align-items-center h-100 text-center py-4">
  <main class="form-signin">
    <form asp-action="login">
      <img class="mb-4" src="/favicon.svg" alt="" width="96" height="96">
      <div class="form-floating">
        <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Username">
        <label asp-for="@Model.Username">Username</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password">
        <label asp-for="@Model.Password">Password</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
  </main>
</body>
</html>


